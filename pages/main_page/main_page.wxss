/* client/pages/main_page/main_page.wxss */

.imageBanner {
  width: 100%;
  height: 100%;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
}
 
.imageBanner_small {
  height: 96%;
  transform: scale(0.9);
  transition: all 0.2s ease-in 0s;
  border-top-left-radius: 15rpx;
  border-top-right-radius: 15rpx;
  border-bottom-left-radius: 15rpx;
  border-bottom-right-radius: 15rpx;
  bottom: -13rpx;
  position: absolute;
}

.my_title_parent{
  height: 40px;
  width: 100%;
  margin-top: 20px;
  background: #00ff00;
  display: flex;
  flex-direction: row;
}

.my_title{
  height: 100%;
  margin-left: 4%;
  display: flex;
  align-items: center;
}

.image_list{
  height: 100px;
  width: 60px;
  margin-left: 9px;
  margin-right: 9px;
}

.parent {
  width: 100%;
  display: flex;
  flex-flow: row wrap;
  align-content: flex-start;
  padding-left: 2%;
  padding-right: 2%;
  margin-top: 20px;
}

.child{
  font-size: 22rpx;
  margin: 12rpx;
  width: 20%;
  height: 300rpx;
  display: flex;
  flex-direction: column;
  margin-top: 2rpx;
}

.child_image {
  height: 75%;
  width: 100%;
  background-color: white;
  border: 1px solid rgb(0, 119, 255);
}
.child_text {
  width: 100%;
  height: 20%;
  text-align:center;
  align-items:center;
  justify-content: center;
  margin: auto; 
}
